{
    "name": "Python, Docker, and PowerShell",
    "image": "mcr.microsoft.com/vscode/devcontainers/universal:1.0",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "pwsh"
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode.powershell"
            ]
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y python3 python3-pip docker.io && pip3 install --no-cache-dir requests matrix_client configparser",
    "remoteUser": "vscode"
}